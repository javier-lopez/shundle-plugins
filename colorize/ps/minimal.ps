function __ {
  printf "%s\\n" "$@"
}

function __make_ansi {
  next=$1 && shift
  printf "%s\\n" "\[\e[$(__$next $@)m\]"
}

function __make_echo {
  next=$1 && shift
  printf "%s\\n" "\033[$(__$next $@)m"
}


function __reset {
  next=$1 && shift
  out="$(__$next $@)"
  printf "%s\\n" "0${out:+;${out}}"
}

function __bold {
  next=$1 && shift
  out="$(__$next $@)"
  printf "%s\\n" "${out:+${out};}1"
}

function __faint {
  next=$1 && shift
  out="$(__$next $@)"
  printf "%s\\n" "${out:+${out};}2"
}

function __italic {
  next=$1 && shift
  out="$(__$next $@)"
  printf "%s\\n" "${out:+${out};}3"
}

function __underline {
  next=$1 && shift
  out="$(__$next $@)"
  printf "%s\\n" "${out:+${out};}4"
}

function __negative {
  next=$1 && shift
  out="$(__$next $@)"
  printf "%s\\n" "${out:+${out};}7"
}

function __crossed {
  next=$1 && shift
  out="$(__$next $@)"
  printf "%s\\n" "${out:+${out};}8"
}


function __color_normal_fg {
  printf "%s\\n" "3$1"
}

function __color_normal_bg {
  printf "%s\\n" "4$1"
}

function __color_bright_fg {
  printf "%s\\n" "9$1"
}

function __color_bright_bg {
  printf "%s\\n" "10$1"
}


function __color_black   {
  printf "%s\\n" "0"
}

function __color_red   {

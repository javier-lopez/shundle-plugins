}

function __color_magenta {
  printf "%s\\n" "5"
}

function __color_cyan  {
  printf "%s\\n" "6"
}

function __color_white   {
  printf "%s\\n" "7"
}

function __color_rgb {
  r=$1 && g=$2 && b=$3
  [[ r == g && g == b ]] && printf "%s\\n" "$(( $r / 11 + 232 ))" && return # gray range above 232
  printf "%s\\n" "8;5;$(( ($r * 36  + $b * 6 + $g) / 51 + 16 ))"
}

function __color {
  color=$1 && shift
  case "$1" in
    fg|bg) side="$1" && shift ;;
    *) side=fg;;
  esac
  case "$1" in
    normal|bright) mode="$1" && shift;;
    *) mode=normal;;
  esac
  [[ $color == "rgb" ]] && rgb="$1 $2 $3" && shift 3

  next=$1 && shift
  out="$(__$next $@)"
  printf "%s\\n" "$(__color_${mode}_${side} $(__color_${color} $rgb))${out:+;${out}}"
}


function __black   {
  printf "%s\\n" "$(__color black $@)"
}

function __red   {
  printf "%s\\n" "$(__color red $@)"
}

function __green   {
  printf "%s\\n" "$(__color green $@)"
}

function __yellow  {
  printf "%s\\n" "$(__color yellow $@)"
}

function __blue  {

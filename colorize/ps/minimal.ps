}

function __magenta {
  printf "%s\\n" "$(__color magenta $@)"
}

function __cyan  {
  printf "%s\\n" "$(__color cyan $@)"
}

function __white   {
  printf "%s\\n" "$(__color white $@)"
}

function __rgb {
  printf "%s\\n" "$(__color rgb $@)"
}


function __color_parse {
  next=$1 && shift
  printf "%s\\n" "$(__$next $@)"
}

function color {
  printf "%s\\n" "$(__color_parse make_ansi $@)"
}

function echo_color {
  printf "%s\\n" "$(__color_parse make_echo $@)"
}


